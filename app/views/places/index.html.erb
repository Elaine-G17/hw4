<h1>Places</h1>

<div class="row">
  <ul>
  <% for post in @post %>
    <div class="col-md-3 col-sm-6">
      <h4>
    <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
      </h4>
    <% if post.uploaded_image.attached? %>
      <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
    <% else %>
      <img src="<%= post["image"] %>" class="img-fluid">
    <% end %>
      <p><%= post["body"] %></p>
    </div>
  <% end %>
</div>

<p>
  <a href="/places/new">New place</a>
</p>