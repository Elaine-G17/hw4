<h1>New Place</h1>

<% if @current_user %>
  <div class="mb-3">
    <%= form_with :model => @place do |form| %>
      <%= form.label "name" %>
      <%= form.text_field "name" %>
  </div>
  <div class="mb-3">
    <button type="submit" class="btn btn-primary mb-3">Add New Place</button>
  </div>
    <% end %>
<% else %>
  You must <a href="/login">Login</a> to post.
<% end %>